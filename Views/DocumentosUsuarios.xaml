<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NovaVersaoCentralDocs.Views.DocumentosUsuarios">
    <Grid ColumnDefinitions="200,*">

        <!-- MENU LATERAL -->
        <VerticalStackLayout BackgroundColor="#1976D2" Padding="15" Spacing="20">

            <Image Source="https://static.vecteezy.com/system/resources/previews/005/544/753/original/profile-icon-design-free-vector.jpg" HeightRequest="80" HorizontalOptions="Center"/>

            <Label Text="Nome Usuário"            
                   HorizontalOptions="Center"
                   TextColor="White"
                   FontAttributes="Bold"
                   FontSize="16"/>

            <Button Text="Dados" 
                    Clicked="Dados"
                    TextColor="White"
                    BackgroundColor="#1764B8"
                    CornerRadius="8"/>

            <Button Text="Menu Principal"
                    Clicked="MenuPrincipal"
                    TextColor="White"
                    BackgroundColor="#1764B8"
                    CornerRadius="8"/>

            <Button Text="Documentos"
                    Clicked="Documentos"
                    TextColor="White"
                    BackgroundColor="#1764B8"
                    CornerRadius="8"/>

            <Button Text="Configurações"
                    Clicked="Perfil"
                    TextColor="White"
                    BackgroundColor="#1561B5"
                    CornerRadius="8"/>

            <Button Text="Sair"
                    Clicked="Sair"
                    TextColor="White"
                    BackgroundColor="#114F93"
                    CornerRadius="8"
                    VerticalOptions="EndAndExpand"/>
        </VerticalStackLayout>

        <!-- CONTEÚDO -->
        <ScrollView Grid.Column="1" Padding="20">
            <VerticalStackLayout Spacing="15">

                <Label Text="Documentos"
                       FontAttributes="Bold"
                       FontSize="24"
                       TextColor="#1976D2"
                       HorizontalOptions="Center"/>

                <Frame BackgroundColor="#E3F2FD" CornerRadius="10" Padding="15">
                    <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                        <VerticalStackLayout>
                            <Label Text="Backup Automatico" FontAttributes="Bold" FontSize="16" TextColor="#333"/>
                            <Label Text="Desativar/Ativar backup automatico" FontSize="13" TextColor="#666"/>
                        </VerticalStackLayout>
                        <Switch Grid.Column="1"/>
                    </Grid>
                </Frame>

                <Frame BackgroundColor="#E3F2FD" CornerRadius="10" Padding="15">
                    <VerticalStackLayout>
                        <Label Text="Salvar como PDF" FontAttributes="Bold" FontSize="16" TextColor="#333"/>
                        <Label Text="Salvar documentos como PDF" FontSize="13" TextColor="#666"/>
                    </VerticalStackLayout>
                </Frame>
                <Frame BackgroundColor="#E3F2FD" CornerRadius="10" Padding="15">
                    <VerticalStackLayout>
                        <Label Text="Imprimir" FontAttributes="Bold" FontSize="16" TextColor="#333"/>
                        <Label Text="Selecionar a impressora" FontSize="13" TextColor="#666"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>