<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NovaVersaoCentralDocs.Views.MenuPrincipal">

    <Grid ColumnDefinitions="250,*" RowDefinitions="520,*">

        <Border
            Stroke="black"
            StrokeShape="RoundRectangle 20"
            StrokeThickness="2"
            BackgroundColor="White"
            Margin="10,10,0,10"
            Grid.Column="0">

            <VerticalStackLayout Padding="15,10">

                <Label Text="Menu Principal"
                       FontAttributes="Bold"
                       FontSize="16"
                       Margin="0,0,0,15"
                       HorizontalOptions="Start" />

                <Button Text="Suporte"
                        ImageSource="suport.png" 
                        HorizontalOptions="Start"
                        Clicked="OnSuporteClicked"
                        TextColor="Black"
                        BackgroundColor="Transparent"/>

                <BoxView HeightRequest="1" BackgroundColor="#E0E0E0" Margin="0,5"/>

                <Button Text="Configurações" 
                        ImageSource="setting.png" 
                        HorizontalOptions="Start"
                        Clicked="OnConfiguracoesClicked"
                        TextColor="Black"
                        BackgroundColor="Transparent"/>

                <BoxView HeightRequest="1" BackgroundColor="#E0E0E0" Margin="0,5"/>

                <Button Text="Acessibilidade"
                        ImageSource="accessibility.png" 
                        HorizontalOptions="Start"
                        Clicked="OnAcessibilidadeClicked"
                        TextColor="Black"
                        BackgroundColor="Transparent"/>

                <BoxView HeightRequest="1" BackgroundColor="#E0E0E0" Margin="0,5"/>

                <Button Text="Sobre nós" 
                        ImageSource="question_9654218.png" 
                        HorizontalOptions="Start"
                        Clicked="OnSobreClicked"
                        TextColor="Black"
                        BackgroundColor="Transparent"/>

                <BoxView HeightRequest="1" BackgroundColor="#E0E0E0" Margin="0,5"/>

                <Button Text="Perguntas frequentes" 
                        ImageSource="question_7848533.png" 
                        HorizontalOptions="Start"
                        Clicked="OnFaqClicked"
                        TextColor="Black"
                        BackgroundColor="Transparent"/>

                <Label Text="Baixe o App"
                       TextColor="black" 
                       FontSize="15"
                       FontAttributes="Bold"
                       Margin="0,20,0,0"
                       HorizontalOptions="Start" />
                <Grid>
                    <Image
                Source="play.png"
                Scale="0.75"
                HeightRequest="50" 
                Margin="0,15,0,0"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

                </Grid>

                <Grid>
                    <Image
                Source="store.png"
                Scale="0.75"
                HeightRequest="50"                 
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />
                </Grid>

            </VerticalStackLayout>
        </Border>

        <!-- CONTEÚDO PRINCIPAL -->
        <Grid Grid.Column="1" RowDefinitions="Auto,*">

            <!-- ÁREA DE CONTEÚDO -->
            <ScrollView Grid.Row="1" Margin="10,10,10,10">
                <VerticalStackLayout x:Name="ConteudoArea"
                                     Padding="20"
                                     Spacing="10">
                    <Label Text="Bem-vindo ao sistema!"
                           FontSize="18"
                           FontAttributes="Bold"/>
                </VerticalStackLayout>
            </ScrollView>

        </Grid>
    </Grid>
</ContentPage>
